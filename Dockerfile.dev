# Dockerfile para desarrollo
FROM node:18-alpine

WORKDIR /app

# Copiar archivos de dependencias primero para caching
COPY package.json package-lock.json ./

# Instalar dependencias incluyendo dev
RUN npm ci

# Copiar c√≥digo fuente
COPY . .

# Exponer puerto
EXPOSE 3000

# Comando por defecto
CMD ["npm", "run", "dev"]